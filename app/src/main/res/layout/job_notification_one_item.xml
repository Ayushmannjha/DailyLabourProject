<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:layout_margin="1dp"
    app:cardCornerRadius="0dp">

    <!-- Container for the content inside the CardView -->
 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/light_gray">
        <!-- Top Border -->

     <!-- Content Area (Place your actual content here) -->


        <!-- Bottom Border -->

     <View
         android:id="@+id/view21"
         android:layout_width="0dp"
         android:layout_height="1dp"

         android:layout_alignParentTop="true"
         android:background="#686868"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent" />

     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_alignParentBottom="true"
         android:background="#686868"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <TextView
         android:id="@+id/msg"
         android:layout_width="250dp"
         android:layout_height="wrap_content"
         android:textSize="18dp"
         android:text="Xyz jobs uploaded onxyz location"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintVertical_bias="0.446" />

     <ImageView
         android:id="@+id/imageView22"
         android:layout_width="53dp"
         android:layout_height="52dp"
         app:layout_constraintBottom_toBottomOf="@+id/msg"
         app:layout_constraintEnd_toStartOf="@+id/msg"
         app:layout_constraintHorizontal_bias="0.687"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="@+id/msg"
         app:layout_constraintVertical_bias="0.0"
         app:srcCompat="@drawable/work_alert" />

     <TextView
         android:id="@+id/jobs"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="नौकरियां देखें"
         android:textColor="@color/blue"
         android:textStyle="bold|italic"
         app:layout_constraintEnd_toEndOf="@+id/msg"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="@+id/msg"
         app:layout_constraintTop_toBottomOf="@+id/msg" />

     <View
         android:id="@+id/oval"
         android:layout_width="15dp"
         android:layout_height="15dp"
         android:visibility="gone"
         android:background="@drawable/oval_shape"
         app:layout_constraintBottom_toBottomOf="@+id/msg"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toEndOf="@+id/msg"
         app:layout_constraintTop_toTopOf="@+id/msg" />

 </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
