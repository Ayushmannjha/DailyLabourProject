<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Normal state -->
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#e0e0e0"
                android:endColor="#bdbdbd"
                android:angle="45"/>
            <corners android:radius="12dp"/>
            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="8dp"
                android:bottom="8dp"/>
            <stroke android:width="1dp" android:color="#a0a0a0" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#cfcfcf"
                android:endColor="#9e9e9e"
                android:angle="45"/>
            <corners android:radius="12dp"/>
            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="8dp"
                android:bottom="8dp"/>
            <stroke android:width="1dp" android:color="#757575" />
        </shape>
    </item>

</selector>
